<Window x:Class="_4600Project.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4600Project"
        mc:Ignorable="d"
        Title="Search Options" Height="300" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Please enter your search terms seperated by a comma:" VerticalAlignment="Top" Margin="20,10,0,0" Width="255"/>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="255" Margin="20,41,0,0"/>
        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="155,84,0,0" SelectedIndex="0">
            <ComboBoxItem Name="DefaultItem">Default Twitter</ComboBoxItem>
            <ComboBoxItem Name="NewToOldItem">New To Old</ComboBoxItem>
            <ComboBoxItem Name="OldToNewItem">Old To New</ComboBoxItem>
        </ComboBox>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Sort Results By:" VerticalAlignment="Top" Margin="20,87,0,0"/>
        <Button Content="Search!" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="106,203,0,0" Click="Button_Click"/>

    </Grid>
</Window>
